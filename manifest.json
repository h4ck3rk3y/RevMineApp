{
  "manifest_version": 2,

  "name": "RevMine",
  "description": "HackNow",
  "version": "2.0",

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "http://localhost:5000/",
    "http://fonts.googleapis.com/",
    "tabs"
  ],
  "background": {
  	"scripts": ["bg.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

}
